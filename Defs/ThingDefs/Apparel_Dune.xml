<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>Fremen_Mask</defName>
    <label>fremen stillsuit mask</label>
    <description>A facial apparatus designed to filter and recycle the water expelled whilst breathing. Without this apparatus, the stillsuit would only operate at around 80% efficiency.</description>
    <graphicData>
      <texPath>Things/Uniforms/Hats/StillsuitMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <tradeability>Sellable</tradeability>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Uniforms/Hats/StillsuitMask</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>FremenApparel</li>
      </tags>
    </apparel>
  </ThingDef>
