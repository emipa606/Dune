    <graphicData>
      <texPath>Things/Items/RawSpiceHarvest</texPath>
    </graphicData>
    <statBases>
      <MarketValue>3</MarketValue>
    </statBases>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <thingCategories>
      <li>PlantMatter</li>
